{% extends "layout-base.twig" %}

{% block main %}
    <div class="container">
        <div class="jumbotron mt-5 srp-bg-dark-2">
            {{ flashMessages()|raw }}
            <div class="row justify-content-center">
                <div class="col col-lg-5">
                    <h1 class="display-4">{{ serviceName }}</h1>
                    <hr class="my-4">
                    <p>Login with your EVE Online Account to gain access.</p>
                    <a href="{{ loginUrl }}" rel="noopener noreferrer" role="button">
                        <img src="/static/EVE_SSO_Login_Buttons_Large_Black.png" alt="LOG IN with EVE Online" />
                    </a>
                    <p class="mt-3">{{ data.loginHint|raw }}</p>
                </div>
                <div class="col col-lg-4">
                    <img src="{{ logo }}" alt="{{ logoAltText }}" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>

    {% include 'components/footer.html' %}
{% endblock %}
