<div class="table-responsive">
    <table class="table table-sm table-dark table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Ship</th>
                <th>Pilot</th>
                <th>System</th>
                <th>Kill Time</th>
                <th>External URLs</th>
                <th>Created</th>
                <th>Division</th>
                <th>Status</th>
                <th>Payout</th>
            </tr>
        </thead>
        <tbody>
            {% for request in requests %}
                <tr>
                    <td><a href="/request/{{ request.id }}/{{ page }}">{{ request.ship }}</a></td>
                    <td>{{ request.pilot.name }}</td>
                    <td>{{ request.solarSystem }}</td>
                    <td>{{ request.killTime|date('Y-m-d H:i') }}</td>
                    <td>
                        {% if request.killboardUrl %}
                            <a href="{{ request.killboardUrl }}" target="_blank" rel="noopener">zKillboard</a>
                        {% endif %}
                        {% if request.esiLink %}
                            <a href="{{ request.esiLink }}" target="_blank" rel="noopener">ESI</a>
                        {% endif %}
                    </td>
                    <td>{{ request.created|date('Y-m-d H:i') }}</td>
                    <td>{{ request.division.name }}</td>
                    <td>{{ request.status }}</td>
                    <td>
                        {% if request.payout is not null %}
                            {{ request.payout|number_format }}
                        {% endif %}
                    </td>
                </tr>
            {%  endfor %}
        </tbody>
    </table>
</div>
